<div class="card">
    <div class="card-header" style="font-size: 14px; background-color: #575757; box-shadow: inset 1px 25px 32px -10px #848383; color: #FFFFFF;">
        {{ block.trans('Latest Members') }}
    </div>
    <div class="card-body">
        {% for user in block.getLastUsers() %}
            <div class="row">
                <div class="col-md-3 pt-1 text-end">
                    <div class="profile-image"
                         style="display: inline-block; border: 2px solid #8db4db; width: 35px; height: 35px; border-radius: 5px; padding: 1px;">
                        <img src="{{ user.getProfileImage() }}"
                             style="width: 100%; height: 100%;" alt=""/>
                    </div>
                </div>
                <div class="col-md p-0">
                    <a href="{{ block.getUserUrl(user) }}" class="text-muted" style="font-size: 12px; font-weight: bold;">
                        {{ user.getShortName() }}
                    </a>
                    <p class="text-muted" style="font-size: 13px;">{{ block.trans('Member') }}</p>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="card-footer">
        <span style="font-size: 12px;">
            {{ block.trans('We welcome the new members.') }}
        </span>
    </div>
</div>