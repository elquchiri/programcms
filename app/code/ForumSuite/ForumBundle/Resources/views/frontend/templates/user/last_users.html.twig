<div class="card">
    <div class="card-header" style="font-size: 14px; background-color: #575757; box-shadow: inset 1px 25px 32px -10px #848383; color: #FFFFFF;">
        {{ block.trans('Latest Members') }}
    </div>
    <ul class="list-group list-group-flush">
        {% for user in block.getLastUsers() %}
        <li class="list-group-item">
            <div class="row">
                <div class="col-md-3 pt-1">
                    <div class="profile-image"
                         style="display: inline-block; border: 2px solid #8db4db; border-radius: 100%; width: 35px; height: 35px; padding: 1px;">
                        <img class="rounded-circle" src="{{ user.getProfileImage() }}"
                             style="width: 100%; height: 100%;" alt=""/>
                    </div>
                </div>
                <div class="col-md p-0">
                    <a class="text-dark" href="{{ block.getUserUrl(user) }}" style="font-size: 13px; font-weight: bold;">
                        {{ user.getShortName() }}
                    </a>
                    <p class="text-muted p-0 m-0" style="font-size: 12px;">{{ block.trans('Member') }}</p>
                </div>
            </div>
        </li>
        {% endfor %}
    </ul>
    <div class="card-footer">
        <span style="font-size: 12px;">
            {{ block.trans('We welcome the new members.') }}
        </span>
    </div>
</div>