<div class="tabs-menu" data-controller="tabs">
    <ul>
        {% set tab = block.getTabs() %}
        {% if tab.label and tab.label is not empty %}
            <li class="root open">
                <a>{{ tab.label }}</a>
            </li>
        {% endif %}
        {% if tab.sections is defined %}
            <ul class="child"{% if tab.active is defined %} style="display: block"{% endif %}>
                {% for sectionId, section in tab.sections %}
                    <li>
                        <a class="{% if section.active %}active{% endif %}"
                           href="#"
                           id="{{ sectionId }}"
                           data-action="tabs#tabClick">
                            {{ section.label }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </ul>
</div>