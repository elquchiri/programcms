<ul class="navbar-nav mb-2 mb-lg-0">
    <span style="padding-top: 8px; font-size: 13px; font-weight: bold">{{ block.trans('Scope:') }}</span>
    <li class="nav-item dropend">
        <a class="nav-link dropdown-toggle" style="font-size: 14px;" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            {{ block.getCurrentScopeLabel() }}
        </a>
        <ul class="dropdown-menu" style="font-size: 14px;">
            <a class="dropdown-item" href="{{ block.getUrl() }}">All Website Views</a>
            {% for website in block.getAllWebsites() %}
                <a class="dropdown-item" href="{{ block.getUrl() }}/website/{{ website.getWebsiteId() }}">{{ website.getWebsiteName() }}</a>
                {% for websiteGroup in website.getGroups() %}
                    <a class="dropdown-item" style="padding-left: 30px;" href="{{ block.getUrl() }}/website_group/{{ websiteGroup.getWebsiteGroupId() }}">{{ websiteGroup.getWebsiteGroupName() }}</a>
                    {% for websiteView in websiteGroup.getWebsiteViews() %}
                        <a class="dropdown-item" style="padding-left: 45px;" href="{{ block.getUrl() }}/website_view/{{ websiteView.getWebsiteViewId() }}">{{ websiteView.getWebsiteViewName() }}</a>
                    {% endfor %}
                {% endfor %}
            {% endfor %}
        </ul>
    </li>
</ul>