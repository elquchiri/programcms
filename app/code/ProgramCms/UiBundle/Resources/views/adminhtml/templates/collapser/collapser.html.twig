<div class="collapser">
    {% if efBlock.hasLabel() %}
    <a class="collapser-label open" data-bs-toggle="collapse" href="#{{ efBlock.getName() }}" role="button"
           aria-expanded="false" aria-controls="{{ efBlock.getName() }}">
            {{ efBlock.getLabel() }}
        </a>
    {% endif %}
    <div class="collapse {% if efBlock.isOpen() %}show{% endif %}" id="{{ efBlock.getName() }}">
        {% if efBlock.hasLabel() %}<div class="collapser-container">{% endif %}
            {% for blockName, subBlock in efBlock.getChildBlocks() %}
                {{ efBlock.getChildHtml(blockName)|raw }}
            {% endfor %}
        {% if efBlock.hasLabel() %}</div>{% endif %}
    </div>
</div>