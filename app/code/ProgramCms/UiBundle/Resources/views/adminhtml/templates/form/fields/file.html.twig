<div
    class="image-uploader"
>
    <div class="btn-group mt-1" role="group" aria-label="{{ block.getId() }}">
        <a
            data-action="image-uploader#triggerBrowse"
            class="btn btn-outline-secondary btn-sm border-end-0">
            {{ block.trans('Upload') }}
        </a>
        <a class="btn btn-outline-secondary btn-sm" data-action="image-uploader#openMediaBrowser">{{ block.trans('Select from Cloud') }}</a>
    </div>
    <input
        id="{{ block.getId() }}"
        type="file"
        name="{{ block.getName() }}"
        class="d-none"
        accept="image/*"
        data-action="change->image-uploader#showPreview">
</div>