<input
    type="text"
    name="{{ block.getName() }}"
    id="{{ block.getName() }}"
    class="form-control"
    placeholder="{{ block.getPlaceholder() }}"
    value="{% if block.hasValue() %}{{ block.getValue() }}{% endif %}"
    aria-describedby="{{ block.getPlaceholder() }}"
/>