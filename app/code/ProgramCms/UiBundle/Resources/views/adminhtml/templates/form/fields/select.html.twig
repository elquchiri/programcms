<select
    name="{{ block.getName() }}"
    class="form-select {% if block.isMultiSelect() %}multiselect{% endif %}"
    id="{{ block.getName() }}"
    {% if block.isMultiSelect() == true %}multiple{% endif %}>
    {% for optionKey, option in block.getOptions() %}
        <option
            value="{{ optionKey }}"
            {% if block.hasValue() and block.getValue() == optionKey %}selected{% endif %}>
            {{ option }}
        </option>
    {% endfor %}
</select>
