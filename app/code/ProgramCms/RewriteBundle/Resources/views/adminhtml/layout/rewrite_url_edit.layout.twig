{% page layout="admin-2columns-left" %}
    {% referenceContainer name="content" %}
        {% block name="url_rewrite_form" class="ui.block.form" %}
            {% arguments %}
                {% argument name="data" type="array" %}
                    {% argument name="label" type="string" %}URL Information{% endArgument %}
                {% endArgument %}
                {% argument name="buttons" type="array" %}
                    {% argument name="back" type="string" %}ProgramCms\RewriteBundle\Model\Provider\Button\Url\Back{% endArgument %}
                    {% argument name="save" type="string" %}ProgramCms\RewriteBundle\Model\Provider\Button\Url\Save{% endArgument %}
                {% endArgument %}
                {% argument name="dataSource" type="array" %}
                    {% argument name="dataProvider" type="array" %}
                        {% argument name="class" type="string" %}ProgramCms\RewriteBundle\Model\Provider\Listing\Url\DataProvider{% endArgument %}
                        {% argument name="primaryFieldName" type="string" %}url_rewrite_id{% endArgument %}
                        {% argument name="requestFieldName" type="string" %}id{% endArgument %}
                    {% endArgument %}
                    {% argument name="settings" type="array" %}
                        {% argument name="submitUrl" type="string" %}rewrite_url_save{% endArgument %}
                    {% endArgument %}
                {% endArgument %}
                {% argument name="layout" type="array" %}
                    {% argument name="navContainerName" type="string" %}sidebar.main{% endArgument %}
                    {% argument name="type" type="string" %}tabs{% endArgument %}
                {% endArgument %}
            {% endArguments %}
            {% block name="url_rewrite_view" class="ui.block.form.fieldset" %}
                {% arguments %}
                    {% argument name="data" type="array" %}
                        {% argument name="label" type="string" %}Rewrite Detail{% endArgument %}
                    {% endArgument %}
                {% endArguments %}
                {% block name="url_rewrite_id" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}hidden{% endArgument %}
                            {% argument name="isRequired" type="boolean" %}true{% endArgument %}
                            {% argument name="source" type="string" %}url_rewrite_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="websiteView" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}select{% endArgument %}
                            {% argument name="label" type="string" %}Associate to View{% endArgument %}
                            {% argument name="isRequired" type="boolean" %}true{% endArgument %}
                            {% argument name="sourceModel" type="string" %}ProgramCms\WebsiteBundle\Model\Provider\DataSource\WebsiteTree{% endArgument %}
                            {% argument name="size" type="string" %}col-md-3{% endArgument %}
                            {% argument name="source" type="string" %}url_rewrite_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="request_path" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}Request Path{% endArgument %}
                            {% argument name="isRequired" type="boolean" %}true{% endArgument %}
                            {% argument name="source" type="string" %}url_rewrite_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="target_path" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}Target Path{% endArgument %}
                            {% argument name="isRequired" type="boolean" %}true{% endArgument %}
                            {% argument name="source" type="string" %}url_rewrite_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="arguments" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}textarea{% endArgument %}
                            {% argument name="label" type="string" %}Arguments{% endArgument %}
                            {% argument name="isRequired" type="boolean" %}false{% endArgument %}
                            {% argument name="source" type="string" %}url_rewrite_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="redirect_type" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}select{% endArgument %}
                            {% argument name="label" type="string" %}Redirect Type{% endArgument %}
                            {% argument name="isRequired" type="boolean" %}false{% endArgument %}
                            {% argument name="sourceModel" type="string" %}ProgramCms\RewriteBundle\Model\Provider\DataSource\RedirectTypes{% endArgument %}
                            {% argument name="source" type="string" %}url_rewrite_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
            {% endBlock %}
        {% endBlock %}
    {% endReferenceContainer %}
{% endPage %}