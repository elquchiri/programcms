{% page layout="3columns" %}
    {% css ['bundles/programcmstheme/css/main.css', 'bundles/programcmstheme/css/top-panel.css', 'bundles/programcmstheme/css/footer.css', 'bundles/programcmstheme/css/breadcrumb.css'] %}
    {% js ['underscore-umd-min.js', 'popper.min.js', 'bootstrap.bundle.min.js'] %}

    {% referenceContainer name="header.container" %}
        {% container name="header.panel.wrapper" htmlTag="div" htmlClass="panel wrapper" %}
            {% container name="header.panel" htmlTag="div" htmlClass="panel header container" %}
                {# Website switcher dropdown #}
                {% block name="website.switcher" class="ProgramCms\\WebsiteBundle\\Block\\WebsiteSwitcher" template="@ProgramCmsWebsiteBundle/website_switcher.html.twig" %}{% endBlock %}
                {# Account navigation links #}
                {% block name="website.navigation" class="ProgramCms\\UserBundle\\Block\\Account\\Navigation" template="@ProgramCmsUserBundle/account_navigation.html.twig" %}{% endBlock %}
            {% endContainer %}
        {% endContainer %}
        {% container name="header.wrapper" htmlTag="div" htmlClass="panel content" %}
            {% container name="navbar" htmlTag="nav" htmlClass="navbar navbar-expand-lg container" %}
                {# Website LOGO Block #}
                {% block name="logo" class="ProgramCms\\ThemeBundle\\Block\\Html\\Header\\Logo" template="@ProgramCmsThemeBundle/logo.html.twig" %}{% endBlock %}
                {# Website Navbar Toggler Block #}
                {% block name="navbar.togller" class="ProgramCms\\UserBundle\\Block\\Account\\Navigation" template="@ProgramCmsThemeBundle/navbar_toggler.html.twig" %}{% endBlock %}
                {# Website Navbar Fast Access Container #}
                {% container name="navbar.collapse" htmlTag="div" htmlClass="collapse navbar-collapse justify-content-end" %}{% endContainer %}
            {% endContainer %}
        {% endContainer %}
    {% endReferenceContainer %}

    {% referenceContainer name="page.top" %}
        {# Navigation Section Block #}
        {% block name="navigation.bar" class="ProgramCms\\UserBundle\\Block\\Account\\Navigation" template="@ProgramCmsThemeBundle/navigation.bar.html.twig" %}{% endBlock %}
        {% container name="top.container" htmlTag="div" htmlClass="top-container" %}{% endContainer %}
        {# Breadcrump Block #}
        {% block name="breadcrumb" class="ProgramCms\\UserBundle\\Block\\Account\\Navigation" template="@ProgramCmsThemeBundle/breadcrumb.html.twig" %}{% endBlock %}
    {% endReferenceContainer %}

    {% referenceContainer name="main" %}
        {% container name="content" %}{% endContainer %}
    {% endReferenceContainer %}

    {% referenceContainer name="footer.container" %}
        {% container name="footer" htmlTag="div" htmlClass="footer content" %}
            {% block name="footer.content" class="ProgramCms\\WebsiteBundle\\Block\\WebsiteSwitcher" template="@ProgramCmsThemeBundle/footer.html.twig" %}{% endBlock %}
        {% endContainer %}
    {% endReferenceContainer %}
{% endPage %}