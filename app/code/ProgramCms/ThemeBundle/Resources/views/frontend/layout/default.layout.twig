{% page layout="3columns" %}
    {# Page Top Container #}
    {% referenceContainer name="page.top" %}
        {# Navigation Section Block #}
        {% container name="navigation.bar" htmlTag="nav" htmlClass="mb-2" htmlId="menu" %}
            {% container name="navigation.nav.container" htmlTag="div" htmlClass="container" %}
                {% block name="navigation.block" class="ProgramCms\\ThemeBundle\\Block\\Html\\TopMenu" template="@ProgramCmsThemeBundle/navigation_bar.html.twig" %}{% endBlock %}
            {% endContainer %}
        {% endContainer %}
    {% endReferenceContainer %}

    {# Header Container #}
    {% referenceContainer name="header.container" %}
        {% container name="header.panel.wrapper" htmlTag="div" htmlClass="panel wrapper" %}
            {% container name="header.panel" htmlTag="div" htmlClass="panel header container" %}
                {# Account navigation links #}
                {% block name="website.navigation" class="ProgramCms\\CoreBundle\\View\\Element\\Template" template="@ProgramCmsUserBundle/account_navigation.html.twig" %}{% endBlock %}
            {% endContainer %}
        {% endContainer %}
        {% container name="header.wrapper" htmlTag="div" htmlClass="panel content" %}
            {% container name="navbar" htmlTag="div" htmlClass="container" %}
                {% container name="navbar.container" htmlTag="nav" htmlClass="navbar navbar-expand-lg" %}
                    {% container name="logo.container" htmlTag="div" %}
                        {# Website LOGO Block #}
                        {% block name="logo" class="ProgramCms\\ThemeBundle\\Block\\Html\\Header\\Logo" template="@ProgramCmsThemeBundle/logo.html.twig" %}{% endBlock %}
                    {% endContainer %}
                    {# Website Navbar Toggler Block #}
                    {% block name="navbar.togller" class="ProgramCms\\CoreBundle\\View\\Element\\Template" template="@ProgramCmsThemeBundle/navbar_toggler.html.twig" %}{% endBlock %}
                    {# Website Navbar Fast Access Container #}
                    {% container name="navbar.collapse" htmlTag="div" htmlClass="collapse navbar-collapse justify-content-end" %}{% endContainer %}
                {% endContainer %}
            {% endContainer %}
        {% endContainer %}

        {# Breadcrump Block #}
        {% container name="breadcrumb.container" htmlTag="div" htmlClass="ef-breadcrumb container" %}
            {% block name="breadcrumb" class="ProgramCms\\CoreBundle\\View\\Element\\Template" template="@ProgramCmsThemeBundle/breadcrumb.html.twig" %}{% endBlock %}
        {% endContainer %}
    {% endReferenceContainer %}

    {# Flash Messages Block #}
    {% referenceContainer name="page.messages" %}
        {% container name="page.messages.wrapper" htmlTag="div" htmlClass="container" %}
            {% block name="page.alerts.block" class="ProgramCms\\CoreBundle\\View\\Element\\Template" template="@ProgramCmsThemeBundle/flashes.html.twig" %}{% endBlock %}
        {% endContainer %}
    {% endReferenceContainer %}
    {# Main Container #}
    {% referenceContainer name="main" %}
        {# Main Page Content Container #}
        {% container name="content" %}{% endContainer %}
    {% endReferenceContainer %}
    {#  Footer Container#}
    {% referenceContainer name="footer.container" %}
        {% container name="footer" htmlTag="div" htmlClass="footer-content" %}
            {% container name="footer.columns.container" htmlTag="div" htmlClass="container" %}
                {% container name="footer.columns" htmlTag="div" htmlClass="row" %}
                    {% block name="footer.links" class="ProgramCms\\ThemeBundle\\Block\\Page\\Links" %}
                        {% arguments %}
                            {% argument name="css_class" type="string" %}col-md-4{% endArgument %}
                        {% endArguments %}
                    {% endBlock %}
                {% endContainer %}
            {% endContainer %}
        {% endContainer %}
        {% container name="footer.legal.copyright" %}
            {% block name="copyright" class="ProgramCms\\ThemeBundle\\Block\\Page\\Copyright" %}{% endBlock %}
        {% endContainer %}
    {% endReferenceContainer %}
{% endPage %}