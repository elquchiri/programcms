{% page %}
    {% referenceContainer name="content" %}
        {% block name="post_form" class="ui.block.form" %}
            {% arguments %}
                {% argument name="data" type="array" %}
                    {% argument name="label" type="string" %}Post Information{% endArgument %}
                {% endArgument %}
                {% argument name="buttons" type="array" %}
                    {% argument name="back" type="string" %}ProgramCms\PostBundle\Model\Provider\Button\BackToPostsButton{% endArgument %}
                    {% argument name="reset" type="string" %}ProgramCms\PostBundle\Model\Provider\Button\ResetButton{% endArgument %}
                    {% argument name="delete" type="string" %}ProgramCms\PostBundle\Model\Provider\Button\RemovePostButton{% endArgument %}
                    {% argument name="save" type="string" %}ProgramCms\PostBundle\Model\Provider\Button\SavePostButton{% endArgument %}
                {% endArgument %}
                {% argument name="dataSource" type="array" %}
                    {% argument name="dataProvider" type="array" %}
                        {% argument name="class" type="string" %}ProgramCms\PostBundle\Model\Provider\PostDataProvider{% endArgument %}
                        {% argument name="primaryFieldName" type="string" %}entity_id{% endArgument %}
                        {% argument name="requestFieldName" type="string" %}id{% endArgument %}
                    {% endArgument %}
                    {% argument name="settings" type="array" %}
                        {% argument name="submitUrl" type="string" %}post_index_save{% endArgument %}
                    {% endArgument %}
                {% endArgument %}
            {% endArguments %}
            {% block name="general" class="ui.block.form.fieldset" %}
                {% block name="entity_id" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}hidden{% endArgument %}
                            {% argument name="source" type="string" %}post_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="post_enable" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}switcher{% endArgument %}
                            {% argument name="label" type="string" %}Enable Post{% endArgument %}
                            {% argument name="source" type="string" %}post_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="post_categories" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}multiselect{% endArgument %}
                            {% argument name="label" type="string" %}Categories{% endArgument %}
                            {% argument name="isRequired" type="boolean" %}true{% endArgument %}
                            {% argument name="sourceModel" type="string" %}ProgramCms\PostBundle\Model\Provider\DataSource\Category\Categories{% endArgument %}
                            {% argument name="source" type="string" %}post_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="post_name" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}Post Name{% endArgument %}
                            {% argument name="isRequired" type="boolean" %}true{% endArgument %}
                            {% argument name="source" type="string" %}post_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="user" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}select{% endArgument %}
                            {% argument name="label" type="string" %}Author{% endArgument %}
                            {% argument name="isRequired" type="boolean" %}true{% endArgument %}
                            {% argument name="source" type="string" %}post_form{% endArgument %}
                            {% argument name="sourceModel" type="string" %}ProgramCms\PostBundle\Model\Provider\DataSource\User\Users{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
            {% endBlock %}
            {% block name="post_content_fieldset" class="ui.block.form.fieldset" %}
                {% arguments %}
                    {% argument name="data" type="array" %}
                        {% argument name="label" type="string" %}Content{% endArgument %}
                        {% argument name="collapse" type="boolean" %}true{% endArgument %}
                    {% endArgument %}
                {% endArguments %}
                {% block name="post_image" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}imageUploader{% endArgument %}
                            {% argument name="label" type="string" %}Post Image{% endArgument %}
                            {% argument name="source" type="string" %}post_form{% endArgument %}
                            {% argument name="helpMessage" type="string" %}Maximum file size: 4 MB. Allowed file types: JPG, GIF, PNG.{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="post_short_description" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}textarea{% endArgument %}
                            {% argument name="label" type="string" %}Short Description{% endArgument %}
                            {% argument name="source" type="string" %}post_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="post_content" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}textarea{% endArgument %}
                            {% argument name="label" type="string" %}Post Content{% endArgument %}
                            {% argument name="source" type="string" %}post_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
            {% endBlock %}
            {% block name="display_settings" class="ui.block.form.fieldset" %}
                {% arguments %}
                    {% argument name="data" type="array" %}
                        {% argument name="label" type="string" %}Display Settings{% endArgument %}
                        {% argument name="collapse" type="boolean" %}true{% endArgument %}
                    {% endArgument %}
                {% endArguments %}
                {% block name="post_enable_comment" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}switcher{% endArgument %}
                            {% argument name="label" type="string" %}Enable Comments{% endArgument %}
                            {% argument name="source" type="string" %}post_form{% endArgument %}
                            {% argument name="helpMessage" type="string" %}By enabling this you you allow users to post comments on this post.{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="post_sort_order" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}Sort Order{% endArgument %}
                            {% argument name="source" type="string" %}post_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="attributeSet" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}select{% endArgument %}
                            {% argument name="label" type="string" %}Post Set{% endArgument %}
                            {% argument name="sourceModel" type="string" %}ProgramCms\PostBundle\Model\Provider\DataSource\AttributeSets{% endArgument %}
                            {% argument name="source" type="string" %}post_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
            {% endBlock %}
            {% block name="search_engine" class="ui.block.form.fieldset" %}
                {% arguments %}
                    {% argument name="data" type="array" %}
                        {% argument name="label" type="string" %}Search Engine Optimization{% endArgument %}
                        {% argument name="collapse" type="boolean" %}true{% endArgument %}
                    {% endArgument %}
                {% endArguments %}
                {% block name="post_url_key" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}URL Key{% endArgument %}
                            {% argument name="source" type="string" %}post_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="post_meta_title" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}Meta Title{% endArgument %}
                            {% argument name="source" type="string" %}post_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="post_meta_keywords" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}textarea{% endArgument %}
                            {% argument name="label" type="string" %}Meta Keywords{% endArgument %}
                            {% argument name="source" type="string" %}post_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="post_meta_description" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}textarea{% endArgument %}
                            {% argument name="label" type="string" %}Meta Description{% endArgument %}
                            {% argument name="source" type="string" %}post_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
            {% endBlock %}
            {% block name="post_views_fieldset" class="ui.block.form.fieldset" %}
                {% arguments %}
                    {% argument name="data" type="array" %}
                        {% argument name="label" type="string" %}Post in Website Views{% endArgument %}
                        {% argument name="collapse" type="boolean" %}true{% endArgument %}
                    {% endArgument %}
                {% endArguments %}
                {% block name="post_views" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}multiselect{% endArgument %}
                            {% argument name="label" type="string" %}Enable Post In{% endArgument %}
                            {% argument name="sourceModel" type="string" %}ProgramCms\WebsiteBundle\Model\Provider\DataSource\WebsiteTree{% endArgument %}
                            {% argument name="source" type="string" %}post_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
            {% endBlock %}
        {% endBlock %}
    {% endReferenceContainer %}
{% endPage %}