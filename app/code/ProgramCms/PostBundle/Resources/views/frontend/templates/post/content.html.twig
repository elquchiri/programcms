<div class="mt-4" data-controller="post-viewer">
    <style>
        {{ block.getPost().getPostCss()|raw }}
    </style>

    <h2 class="fw-bold lh-base">{{ block.getPost().getPostName() }}</h2>

    <p class="text-muted m-0 mb-1">
        {% if not block.getPost().getPostLock() %}
            <span class="badge bg-light text-muted"><b>{{ block.getPost().getComments().count() }}</b> replies</span> &middot;
        {% endif %}
        <span class="badge bg-light text-muted">
            <a href="#"><b>{{ block.getPost().getViews().count() }}</b> views</a>
        </span> &middot;
        <span class="badge bg-light text-muted">
            Latest Update :
            <a href="#">
                <b>{{ block.getPostUpdatedAt() }}</b>
            </a>
        </span>
    </p>

    <div class="post_image mt-4" style="border: 1px solid #dedede; padding: 5px; background-color: #eee;">
        <img src="{{ block.getPost().getPostImage() }}" style="width: 100%" />
    </div>

    <div class="mt-4">
        {{ block.formatPost(block.getPost().getPostHtml())|raw }}
    </div>
</div>

