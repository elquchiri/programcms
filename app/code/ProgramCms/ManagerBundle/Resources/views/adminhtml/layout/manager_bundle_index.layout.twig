{% page %}
    {% referenceContainer name="content" %}
        {% block name="bundle_listing" class="ui.block.listing" %}
            {% arguments %}
                {% argument name="buttons" type="array" %}
                    {% argument name="new" type="string" %}ProgramCms\ManagerBundle\Model\Provider\Button\Bundles\AddBundleButton{% endArgument %}
                {% endArgument %}
                {% argument name="dataSource" type="array" %}
                    {% argument name="dataProvider" type="array" %}
                        {% argument name="class" type="string" %}ProgramCms\ManagerBundle\Model\Provider\Listing\Bundles\DataProvider{% endArgument %}
                    {% endArgument %}
                {% endArgument %}
            {% endArguments %}
            {% block name="toolbar" class="ui.block.listing.toolbar" %}
                {% block name="filters" class="ui.block.listing.filters" %}{% endBlock %}
                {% block name="search" class="ui.block.listing.search" %}{% endBlock %}
                {% block name="massActions" class="ui.block.listing.massActions" %}
                    {% arguments %}
                        {% argument name="settings" type="array" %}
                            {% argument name="delete" type="array" %}
                                {% argument name="url" type="string" %}delete{% endArgument %}
                                {% argument name="label" type="string" %}Delete All{% endArgument %}
                            {% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="pagination" class="ui.block.listing.pagination" %}{% endBlock %}
            {% endBlock %}
            {% block name="columns" class="ui.block.columns" %}
                {% block name="selectionsColumn" class="ui.block.selectionsColumn" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="source" type="string" %}bundle_listing{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="name" class="ui.block.column" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="label" type="string" %}Bundle Name{% endArgument %}
                            {% argument name="source" type="string" %}bundle_listing{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="path" class="ui.block.column" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="label" type="string" %}Bundle Path{% endArgument %}
                            {% argument name="source" type="string" %}bundle_listing{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="status" class="ui.block.column" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="label" type="string" %}Bundle Status{% endArgument %}
                            {% argument name="source" type="string" %}bundle_listing{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
