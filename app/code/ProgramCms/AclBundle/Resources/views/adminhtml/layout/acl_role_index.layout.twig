{% page %}
    {% referenceContainer name="content" %}
        {% block name="role_listing" class="ui.block.listing" %}
            {% arguments %}
                {% argument name="buttons" type="array" %}
                    {% argument name="new" type="string" %}ProgramCms\AclBundle\Model\Provider\Button\Role\NewButton{% endArgument %}
                {% endArgument %}
                {% argument name="dataSource" type="array" %}
                    {% argument name="dataProvider" type="array" %}
                        {% argument name="class" type="string" %}ProgramCms\AclBundle\Model\Provider\Listing\Role\DataProvider{% endArgument %}
                        {% argument name="primaryFieldName" type="string" %}role_id{% endArgument %}
                    {% endArgument %}
                {% endArgument %}
            {% endArguments %}
            {% block name="role_listing_columns" class="ui.block.columns" %}
                {% block name="selectionsColumn" class="ui.block.selectionsColumn" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="source" type="string" %}role_listing{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="role_id" class="ui.block.column" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="label" type="string" %}#{% endArgument %}
                            {% argument name="source" type="string" %}role_listing{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="role_name" class="ui.block.column" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="label" type="string" %}Role Name{% endArgument %}
                            {% argument name="source" type="string" %}role_listing{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="role_code" class="ui.block.column" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="label" type="string" %}Role Code{% endArgument %}
                            {% argument name="source" type="string" %}role_listing{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="description" class="ui.block.column" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="label" type="string" %}Role Description{% endArgument %}
                            {% argument name="source" type="string" %}role_listing{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="actionsColumn" class="ProgramCms\\AclBundle\\Ui\\Grid\\Column\\Role\\Actions" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="label" type="string" %}Actions{% endArgument %}
                            {% argument name="source" type="string" %}role_listing{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
            {% endBlock %}
        {% endBlock %}
    {% endReferenceContainer %}
{% endPage %}