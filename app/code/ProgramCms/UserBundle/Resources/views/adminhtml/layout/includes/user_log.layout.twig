{% page %}
    {% referenceBlock name="user_form" %}
        {% block name="user_log" class="ui.block.form.fieldset" %}
            {% arguments %}
                {% argument name="data" type="array" %}
                    {% argument name="label" type="string" %}Session Log{% endArgument %}
                {% endArgument %}
            {% endArguments %}
            {% block name="user_log_listing" class="ui.block.listing" %}
                {% arguments %}
                    {% argument name="dataSource" type="array" %}
                        {% argument name="dataProvider" type="array" %}
                            {% argument name="class" type="string" %}ProgramCms\UserBundle\Model\Provider\Listing\UserLog\DataProvider{% endArgument %}
                            {% argument name="foreignFieldName" type="string" %}user{% endArgument %}
                            {% argument name="requestFieldName" type="string" %}id{% endArgument %}
                        {% endArgument %}
                    {% endArgument %}
                {% endArguments %}

                {% block name="toolbar" class="ui.block.listing.toolbar" %}
                    {% block name="filters" class="ui.block.listing.filters" %}{% endBlock %}
                    {% block name="search" class="ui.block.listing.search" %}{% endBlock %}

                    {% block name="massActions" class="ui.block.listing.massActions" %}
                        {% arguments %}
                            {% argument name="settings" type="array" %}
                                {% argument name="delete" type="array" %}
                                    {% argument name="url" type="string" %}delete{% endArgument %}
                                    {% argument name="label" type="string" %}Delete All{% endArgument %}
                                {% endArgument %}
                            {% endArgument %}
                        {% endArguments %}
                    {% endBlock %}

                    {% block name="pagination" class="ui.block.listing.pagination" %}{% endBlock %}
                {% endBlock %}

                {% block name="columns" class="ui.block.columns" %}
                    {% block name="selectionsColumn" class="ui.block.selectionsColumn" %}
                        {% arguments %}
                            {% argument name="data" type="array" %}
                                {% argument name="source" type="string" %}user_log{% endArgument %}
                            {% endArgument %}
                        {% endArguments %}
                    {% endBlock %}

                    {% block name="ip_address" class="ui.block.column" %}
                        {% arguments %}
                            {% argument name="data" type="array" %}
                                {% argument name="label" type="string" %}IP Address{% endArgument %}
                                {% argument name="source" type="string" %}user_log{% endArgument %}
                                {% argument name="type" type="string" %}text{% endArgument %}
                            {% endArgument %}
                        {% endArguments %}
                    {% endBlock %}
                    {% block name="device" class="ui.block.column" %}
                        {% arguments %}
                            {% argument name="data" type="array" %}
                                {% argument name="label" type="string" %}Device{% endArgument %}
                                {% argument name="source" type="string" %}user_log{% endArgument %}
                                {% argument name="type" type="string" %}text{% endArgument %}
                                {% argument name="dataScope" type="string" %}device{% endArgument %}
                            {% endArgument %}
                        {% endArguments %}
                    {% endBlock %}
                    {% block name="os" class="ui.block.column" %}
                        {% arguments %}
                            {% argument name="data" type="array" %}
                                {% argument name="label" type="string" %}OS{% endArgument %}
                                {% argument name="source" type="string" %}user_log{% endArgument %}
                                {% argument name="type" type="string" %}text{% endArgument %}
                            {% endArgument %}
                        {% endArguments %}
                    {% endBlock %}
                    {% block name="browser" class="ui.block.column" %}
                        {% arguments %}
                            {% argument name="data" type="array" %}
                                {% argument name="label" type="string" %}Browser{% endArgument %}
                                {% argument name="source" type="string" %}user_log{% endArgument %}
                                {% argument name="type" type="string" %}text{% endArgument %}
                            {% endArgument %}
                        {% endArguments %}
                    {% endBlock %}
                    {% block name="created_at" class="ui.block.column" %}
                        {% arguments %}
                            {% argument name="data" type="array" %}
                                {% argument name="label" type="string" %}Date{% endArgument %}
                                {% argument name="source" type="string" %}user_log{% endArgument %}
                                {% argument name="type" type="string" %}date{% endArgument %}
                            {% endArgument %}
                        {% endArguments %}
                    {% endBlock %}
                {% endBlock %}
            {% endBlock %}
        {% endBlock %}
    {% endReferenceBlock %}
{% endPage %}