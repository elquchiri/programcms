{% page %}
    {% referenceBlock name="user_form" %}
        {% block name="user_addresses" class="ui.block.form.fieldset" %}
            {% arguments %}
                {% argument name="data" type="array" %}
                    {% argument name="label" type="string" %}Addresses{% endArgument %}
                {% endArgument %}
            {% endArguments %}
            {% block name="user_addresses_listing" class="ui.block.listing" %}
                {% arguments %}
                    {% argument name="dataSource" type="array" %}
                        {% argument name="dataProvider" type="array" %}
                            {% argument name="class" type="string" %}ProgramCms\UserBundle\Model\Provider\Listing\UserAddress\DataProvider{% endArgument %}
                            {% argument name="foreignFieldName" type="string" %}user{% endArgument %}
                            {% argument name="requestFieldName" type="string" %}id{% endArgument %}
                        {% endArgument %}
                    {% endArgument %}
                {% endArguments %}

                {% block name="addresses_columns" class="ui.block.columns" %}
                    {% block name="user_addresses_listing_selectionsColumn" class="ui.block.selectionsColumn" %}
                        {% arguments %}
                            {% argument name="data" type="array" %}
                                {% argument name="source" type="string" %}user_addresses{% endArgument %}
                            {% endArgument %}
                        {% endArguments %}
                    {% endBlock %}

                    {% block name="city" class="ui.block.column" %}
                        {% arguments %}
                            {% argument name="data" type="array" %}
                                {% argument name="label" type="string" %}City{% endArgument %}
                                {% argument name="source" type="string" %}user_addresses_listing{% endArgument %}
                                {% argument name="type" type="string" %}text{% endArgument %}
                            {% endArgument %}
                        {% endArguments %}
                    {% endBlock %}
                    {% block name="country_code" class="ui.block.column" %}
                        {% arguments %}
                            {% argument name="data" type="array" %}
                                {% argument name="label" type="string" %}Country{% endArgument %}
                                {% argument name="source" type="string" %}user_addresses_listing{% endArgument %}
                                {% argument name="type" type="string" %}text{% endArgument %}
                            {% endArgument %}
                        {% endArguments %}
                    {% endBlock %}
                    {% block name="first_name" class="ui.block.column" %}
                        {% arguments %}
                            {% argument name="data" type="array" %}
                                {% argument name="label" type="string" %}First Name{% endArgument %}
                                {% argument name="source" type="string" %}user_addresses_listing{% endArgument %}
                                {% argument name="type" type="string" %}text{% endArgument %}
                            {% endArgument %}
                        {% endArguments %}
                    {% endBlock %}
                    {% block name="last_name" class="ui.block.column" %}
                        {% arguments %}
                            {% argument name="data" type="array" %}
                                {% argument name="label" type="string" %}Last Name{% endArgument %}
                                {% argument name="source" type="string" %}user_addresses_listing{% endArgument %}
                                {% argument name="type" type="string" %}text{% endArgument %}
                            {% endArgument %}
                        {% endArguments %}
                    {% endBlock %}
                    {% block name="postecode" class="ui.block.column" %}
                        {% arguments %}
                            {% argument name="data" type="array" %}
                                {% argument name="label" type="string" %}Date{% endArgument %}
                                {% argument name="source" type="string" %}user_addresses_listing{% endArgument %}
                                {% argument name="type" type="string" %}text{% endArgument %}
                            {% endArgument %}
                        {% endArguments %}
                    {% endBlock %}
                {% endBlock %}
            {% endBlock %}
        {% endBlock %}
    {% endReferenceBlock %}
{% endPage %}