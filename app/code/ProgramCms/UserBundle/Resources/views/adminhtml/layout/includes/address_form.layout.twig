{% referenceContainer name="content" %}
    {% block name="user_address_form" class="ui.block.form" %}
        {% arguments %}
                {% argument name="data" type="array" %}
                    {% argument name="label" type="string" %}User Information{% endArgument %}
                {% endArgument %}
                {% argument name="buttons" type="array" %}
                    {% argument name="back" type="string" %}ProgramCms\UserBundle\Model\Provider\Button\Address\BackToUserButton{% endArgument %}
                    {% argument name="reset" type="string" %}ProgramCms\UserBundle\Model\Provider\Button\Address\ResetButton{% endArgument %}
                    {% argument name="save" type="string" %}ProgramCms\UserBundle\Model\Provider\Button\Address\SaveAddressButton{% endArgument %}
                {% endArgument %}
                {% argument name="dataSource" type="array" %}
                    {% argument name="dataProvider" type="array" %}
                        {% argument name="class" type="string" %}ProgramCms\UserBundle\Model\Provider\Listing\UserAddress\DataProvider{% endArgument %}
                        {% argument name="primaryFieldName" type="string" %}entity_id{% endArgument %}
                        {% argument name="requestFieldName" type="string" %}id{% endArgument %}
                    {% endArgument %}
                    {% argument name="settings" type="array" %}
                        {% argument name="submitUrl" type="string" %}user_address_save{% endArgument %}
                    {% endArgument %}
                {% endArgument %}
        {% endArguments %}
        {% block name="user_address_fieldset" class="ui.block.form.fieldset" %}
                {% arguments %}
                    {% argument name="data" type="array" %}
                        {% argument name="label" type="string" %}Address Information{% endArgument %}
                    {% endArgument %}
                {% endArguments %}
            {% block name="entity_id" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}hidden{% endArgument %}
                            {% argument name="source" type="string" %}user_address_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
            {% endBlock %}
            {% block name="city" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}City{% endArgument %}
                            {% argument name="source" type="string" %}user_address_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
            {% endBlock %}
            {% block name="country_code" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}select{% endArgument %}
                            {% argument name="label" type="string" %}Country{% endArgument %}
                            {% argument name="source" type="string" %}user_address_form{% endArgument %}
                            {% argument name="sourceModel" type="string" %}ProgramCms\WebsiteBundle\Model\Provider\CountrySelector{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
            {% endBlock %}
            {% block name="firstname" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}First Name{% endArgument %}
                            {% argument name="source" type="string" %}user_address_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
            {% endBlock %}
            {% block name="lastname" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}Last Name{% endArgument %}
                            {% argument name="source" type="string" %}user_address_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
            {% endBlock %}
            {% block name="street" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}Street{% endArgument %}
                            {% argument name="source" type="string" %}user_address_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
            {% endBlock %}
            {% block name="postcode" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}Postcode{% endArgument %}
                            {% argument name="source" type="string" %}user_address_form{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
            {% endBlock %}
        {% endBlock %}
    {% endBlock %}
{% endReferenceContainer %}