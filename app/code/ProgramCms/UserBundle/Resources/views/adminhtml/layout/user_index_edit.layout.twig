                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="username" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}Username{% endArgument %}
