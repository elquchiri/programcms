{% page layout="admin-2columns-left" %}
    {% referenceContainer name="content" %}
        {% block name="user_form" class="ui.block.form" %}
            {% arguments %}
                {% argument name="data" type="array" %}
                    {% argument name="label" type="string" %}User Information{% endArgument %}
                {% endArgument %}
                {% argument name="buttons" type="array" %}
                    {% argument name="back" type="string" %}ProgramCms\UserBundle\Model\Provider\Button\BackToUsersButton{% endArgument %}
                    {% argument name="reset" type="string" %}ProgramCms\UserBundle\Model\Provider\Button\ResetButton{% endArgument %}
                    {% argument name="login_as_user" type="string" %}ProgramCms\UserBundle\Model\Provider\Button\LoginAsUserButton{% endArgument %}
                    {% argument name="force_login" type="string" %}ProgramCms\UserBundle\Model\Provider\Button\ForceSignInButton{% endArgument %}
                    {% argument name="password_reset" type="string" %}ProgramCms\UserBundle\Model\Provider\Button\ResetPasswordButton{% endArgument %}
                    {% argument name="delete" type="string" %}ProgramCms\UserBundle\Model\Provider\Button\DeleteUserButton{% endArgument %}
                    {% argument name="save" type="string" %}ProgramCms\UserBundle\Model\Provider\Button\SaveUserButton{% endArgument %}
                {% endArgument %}
                {% argument name="dataSource" type="array" %}
                    {% argument name="dataProvider" type="array" %}
                        {% argument name="class" type="string" %}ProgramCms\UserBundle\Model\Provider\Listing\DataProvider{% endArgument %}
                        {% argument name="primaryFieldName" type="string" %}entity_id{% endArgument %}
                        {% argument name="requestFieldName" type="string" %}id{% endArgument %}
                    {% endArgument %}
                    {% argument name="settings" type="array" %}
                        {% argument name="submitUrl" type="string" %}user_index_save{% endArgument %}
                    {% endArgument %}
                {% endArgument %}
                {% argument name="layout" type="array" %}
                    {% argument name="navContainerName" type="string" %}sidebar.main{% endArgument %}
                    {% argument name="type" type="string" %}tabs{% endArgument %}
                {% endArgument %}
            {% endArguments %}
            {% block name="user_view" class="ui.block.form.fieldset" %}
                {% arguments %}
                    {% argument name="data" type="array" %}
                        {% argument name="label" type="string" %}Account Interface{% endArgument %}
                    {% endArgument %}
                {% endArguments %}
                {% block name="user_view_block" class="ProgramCms\\UserBundle\\Block\\Adminhtml\\AccountView" %}{% endBlock %}
            {% endBlock %}
            {% block name="user_fieldset" class="ui.block.form.fieldset" %}
                {% arguments %}
                    {% argument name="data" type="array" %}
                        {% argument name="label" type="string" %}Account Information{% endArgument %}
                    {% endArgument %}
                {% endArguments %}
                {% block name="entity_id" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
