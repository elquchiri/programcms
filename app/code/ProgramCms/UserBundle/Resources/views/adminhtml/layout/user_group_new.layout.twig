{% page layout="admin-2columns-left" %}
    {% referenceContainer name="content" %}
        {% block name="group_form" class="ui.block.form" %}
            {% arguments %}
                {% argument name="data" type="array" %}
                    {% argument name="label" type="string" %}Group Information{% endArgument %}
                {% endArgument %}
                {% argument name="buttons" type="array" %}
                    {% argument name="back" type="string" %}ProgramCms\UserBundle\Model\Provider\Button\Group\Back{% endArgument %}
                    {% argument name="save" type="string" %}ProgramCms\UserBundle\Model\Provider\Button\Group\Save{% endArgument %}
                {% endArgument %}
                {% argument name="dataSource" type="array" %}
                    {% argument name="settings" type="array" %}
                        {% argument name="submitUrl" type="string" %}user_group_save{% endArgument %}
                    {% endArgument %}
                {% endArgument %}
                {% argument name="layout" type="array" %}
                    {% argument name="navContainerName" type="string" %}sidebar.main{% endArgument %}
                    {% argument name="type" type="string" %}tabs{% endArgument %}
                {% endArgument %}
            {% endArguments %}
            {% block name="group_view" class="ui.block.form.fieldset" %}
                {% arguments %}
                    {% argument name="data" type="array" %}
                        {% argument name="label" type="string" %}Group Detail{% endArgument %}
                    {% endArgument %}
                {% endArguments %}
                {% block name="name" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}Group Name{% endArgument %}
                            {% argument name="isRequired" type="boolean" %}true{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="code" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}Group Code{% endArgument %}
                            {% argument name="isRequired" type="boolean" %}true{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="description" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}textarea{% endArgument %}
                            {% argument name="label" type="string" %}Group Description{% endArgument %}
                            {% argument name="isRequired" type="boolean" %}false{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
            {% endBlock %}
            {% block name="acl_fieldset" class="ui.block.form.fieldset" %}
                {% arguments %}
                    {% argument name="data" type="array" %}
                        {% argument name="label" type="string" %}Access Control List{% endArgument %}
                    {% endArgument %}
                {% endArguments %}
                {% block name="permissions" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}tree{% endArgument %}
                            {% argument name="label" type="string" %}Resources{% endArgument %}
                            {% argument name="isRequired" type="boolean" %}true{% endArgument %}
                            {% argument name="sourceModel" type="string" %}ProgramCms\UserBundle\Model\Provider\DataSource\Acl\DataProvider{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
            {% endBlock %}
            {% block name="fieldset3" class="ui.block.form.fieldset" %}
                {% arguments %}
                    {% argument name="data" type="array" %}
                        {% argument name="label" type="string" %}User Identity Verification{% endArgument %}
                        {% argument name="open" type="boolean" %}true{% endArgument %}
                        {% argument name="collapse" type="boolean" %}true{% endArgument %}
                    {% endArgument %}
                {% endArguments %}
                {% block name="password" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}password{% endArgument %}
                            {% argument name="label" type="string" %}Your Password{% endArgument %}
                            {% argument name="isRequired" type="boolean" %}true{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
            {% endBlock %}
        {% endBlock %}
    {% endReferenceContainer %}
{% endPage %}