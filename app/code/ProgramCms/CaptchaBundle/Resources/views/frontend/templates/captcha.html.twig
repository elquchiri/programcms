{% if block.isEnabled() %}
<div class="mb-3">
    <label for="captcha_verify" class="form-label fw-bold">{{ block.trans('Verification') }}</label>
    <span class="text-danger">*</span>
    <div class="input-group">
        <input type="text" class="form-control text-center" name="captcha_verify" id="captcha_verify" style="font-size: 17px;">
        <span class="input-group-text p-0 ps-1 pe-1">
            <img src="{{ block.getCaptchaImage() }}" />
        </span>
    </div>
    <div id="captchaHelp" class="form-text">
        {{ block.trans("Please past the captcha in the image bellow to the field, so that we can verify that you're a human.") }}
    </div>
</div>
{% endif %}