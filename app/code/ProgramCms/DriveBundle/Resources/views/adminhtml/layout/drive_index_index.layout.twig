{% page %}
    {% referenceContainer name="buttons.bar" %}
        {% block name="file.manager.search" class="ProgramCms\\DriveBundle\\Block\\FileManager" template="@ProgramCmsDriveBundle/filters/search.html.twig" %}{% endBlock %}
        {% block name="file.manager.presentation" class="ProgramCms\\DriveBundle\\Block\\FileManager" template="@ProgramCmsDriveBundle/presentation_mode.html.twig" %}{% endBlock %}
        {% block name="drive.buttons" class="ProgramCms\\UiBundle\\Block\\Toolbar\\ToolbarActions" %}
            {% arguments %}
                {% argument name="new_upload" type="string" %}ProgramCms\DriveBundle\Model\Provider\Button\UploadButton{% endArgument %}
                {% argument name="new_file" type="string" %}ProgramCms\DriveBundle\Model\Provider\Button\NewFileButton{% endArgument %}
                {% argument name="new_folder" type="string" %}ProgramCms\DriveBundle\Model\Provider\Button\NewFolderButton{% endArgument %}
            {% endArguments %}
        {% endBlock %}
    {% endReferenceContainer %}
    {% referenceContainer name="content" %}
        {% container name="file.manager.row" htmlTag="div" htmlClass="row" %}
            {% container name="file.manager" htmlTag="div" htmlClass="col" %}
                {% block name="file.manager.block" class="ProgramCms\\DriveBundle\\Block\\FileManager" template="@ProgramCmsDriveBundle/file_manager.html.twig" %}{% endBlock %}
            {% endContainer %}
            {% container name="file.viewer" htmlTag="div" htmlClass="col-3" %}
                {% block name="file.viewer.block" class="ProgramCms\\DriveBundle\\Block\\FileViewer" template="@ProgramCmsDriveBundle/file_viewer.html.twig" %}{% endBlock %}
            {% endContainer %}
        {% endContainer %}
    {% endReferenceContainer %}
{% endPage %}