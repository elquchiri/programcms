{% page layout="admin-2columns-left" %}
    {% referenceContainer name="sidebar.main" %}
        {% container name="tree.container" htmlTag="div" htmlClass="sticky-md-top" %}
            {% block name="category.tree.block" class="ProgramCms\\CatalogBundle\\Block\\CategoryTreeButtons" template="@ProgramCmsCatalogBundle/tree_buttons.html.twig" %}{% endBlock %}
            {% block name="category.tree" class="ProgramCms\\UiBundle\\Component\\Tree\\Tree" %}
                {% arguments %}
                    {% argument name="data" type="array" %}
                        {% argument name="isOpen" type="boolean" %}true{% endArgument %}
                    {% endArgument %}
                    {% argument name="dataSource" type="array" %}
                        {% argument name="dataProvider" type="array" %}
                            {% argument name="class" type="string" %}ProgramCms\CatalogBundle\Model\Provider\DataSource\Category\TreeDataProvider{% endArgument %}
                        {% endArgument %}
                    {% endArgument %}
                {% endArguments %}
            {% endBlock %}
        {% endContainer %}
    {% endReferenceContainer %}

    {% referenceContainer name="content" %}
        {% block name="category_form" class="ui.block.form" %}
            {% arguments %}
                {% argument name="data" type="array" %}
                    {% argument name="label" type="string" %}Category Information{% endArgument %}
                {% endArgument %}
                {% argument name="buttons" type="array" %}
                    {% argument name="reset" type="string" %}ProgramCms\CatalogBundle\Model\Provider\Button\Category\ResetButton{% endArgument %}
                    {% argument name="delete" type="string" %}ProgramCms\CatalogBundle\Model\Provider\Button\Category\RemoveCategoryButton{% endArgument %}
                    {% argument name="save" type="string" %}ProgramCms\CatalogBundle\Model\Provider\Button\Category\SaveCategoryButton{% endArgument %}
                {% endArgument %}
                {% argument name="dataSource" type="array" %}
                    {% argument name="settings" type="array" %}
                        {% argument name="submitUrl" type="string" %}catalog_category_save{% endArgument %}
                    {% endArgument %}
                {% endArgument %}
            {% endArguments %}
            {% block name="general" class="ui.block.form.fieldset" %}
                {% block name="parent" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}hidden{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="category_enable" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}switcher{% endArgument %}
                            {% argument name="label" type="string" %}Enable Category{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="include_in_menu" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}switcher{% endArgument %}
                            {% argument name="label" type="string" %}Include in Menu{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="category_name" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}Category Name{% endArgument %}
                            {% argument name="isRequired" type="boolean" %}true{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
            {% endBlock %}
            {% block name="category_content" class="ui.block.form.fieldset" %}
                {% arguments %}
                    {% argument name="data" type="array" %}
                        {% argument name="label" type="string" %}Content{% endArgument %}
                        {% argument name="collapse" type="boolean" %}true{% endArgument %}
                    {% endArgument %}
                {% endArguments %}
                {% block name="category_image" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}imageUploader{% endArgument %}
                            {% argument name="label" type="string" %}Category Image{% endArgument %}
                            {% argument name="helpMessage" type="string" %}Maximum file size: 4 MB. Allowed file types: JPG, GIF, PNG.{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="category_description" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}textarea{% endArgument %}
                            {% argument name="label" type="string" %}Description{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
            {% endBlock %}
            {% block name="display_settings" class="ui.block.form.fieldset" %}
                {% arguments %}
                    {% argument name="data" type="array" %}
                        {% argument name="label" type="string" %}Display Settings{% endArgument %}
                        {% argument name="collapse" type="boolean" %}true{% endArgument %}
                    {% endArgument %}
                {% endArguments %}
                {% block name="category_display_mode" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}select{% endArgument %}
                            {% argument name="label" type="string" %}Display Mode{% endArgument %}
                            {% argument name="sourceModel" type="string" %}ProgramCms\CatalogBundle\Model\Provider\DataSource\DisplayMode{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="category_sort_order" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}Sort Order{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
            {% endBlock %}
            {% block name="search_engine" class="ui.block.form.fieldset" %}
                {% arguments %}
                    {% argument name="data" type="array" %}
                        {% argument name="label" type="string" %}Search Engine Optimization{% endArgument %}
                        {% argument name="collapse" type="boolean" %}true{% endArgument %}
                    {% endArgument %}
                {% endArguments %}
                {% block name="category_url_key" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}URL Key{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="category_meta_title" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}Meta Title{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="category_meta_keywords" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}textarea{% endArgument %}
                            {% argument name="label" type="string" %}Meta Keywords{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="category_meta_description" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}textarea{% endArgument %}
                            {% argument name="label" type="string" %}Meta Description{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
            {% endBlock %}
            {% block name="schedule_new" class="ui.block.form.fieldset" %}
                {% arguments %}
                    {% argument name="data" type="array" %}
                        {% argument name="label" type="string" %}Schedule Status{% endArgument %}
                        {% argument name="collapse" type="boolean" %}true{% endArgument %}
                    {% endArgument %}
                {% endArguments %}
                {% block name="schedule_new_from" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}date{% endArgument %}
                            {% argument name="label" type="string" %}From{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="schedule_new_to" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}date{% endArgument %}
                            {% argument name="label" type="string" %}To{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
            {% endBlock %}
        {% endBlock %}
    {% endReferenceContainer %}
{% endPage %}