{% page %}
    {% referenceContainer name="buttons.bar" %}
        {% block name="website.switcher" class="ProgramCms\\UiBundle\\Block\\Toolbar\\WebsiteSwitcher" template="@ProgramCmsUiBundle/toolbar/website_switcher.html.twig" %}{% endBlock %}
        {% block name="toolbar.actions" class="ProgramCms\\WebsiteBundle\\Block\\Toolbar\\CreateToolbarActions" template="@ProgramCmsUiBundle/toolbar/toolbar_buttons.html.twig" %}{% endBlock %}
    {% endReferenceContainer %}

    {% referenceContainer name="content" %}
        {% block name="collapser" class="ProgramCms\\UiBundle\\Block\\Collapser\\Collapser" %}
            {% arguments %}
                {% argument name="label" type="string" %}New Website{% endArgument %}
            {% endArguments %}
            {% block name="form" class="ProgramCms\\UiBundle\\Block\\Form\\Form" %}
                {% arguments %}
                    {% argument name="fieldSets" type="array" %}
                        {% argument name="fieldset1" type="array" %}
                            {% argument name="fields" type="array" %}
                                {% argument name="name" type="array" %}
                                    {% argument name="type" type="string" %}text{% endArgument %}
                                    {% argument name="label" type="string" %}Name{% endArgument %}
                                    {% argument name="placeholder" type="string" %}Website Name{% endArgument %}
                                {% endArgument %}
                                {% argument name="code" type="array" %}
                                    {% argument name="type" type="string" %}text{% endArgument %}
                                    {% argument name="label" type="string" %}Code{% endArgument %}
                                    {% argument name="placeholder" type="string" %}Code{% endArgument %}
                                {% endArgument %}
                                {% argument name="sort_order" type="array" %}
                                    {% argument name="type" type="string" %}text{% endArgument %}
                                    {% argument name="label" type="string" %}Sort Order{% endArgument %}
                                    {% argument name="placeholder" type="string" %}0{% endArgument %}
                                {% endArgument %}
                                {% argument name="status" type="array" %}
                                    {% argument name="type" type="string" %}select{% endArgument %}
                                    {% argument name="label" type="string" %}Status{% endArgument %}
                                    {% argument name="sourceModel" type="string" %}ProgramCms\\UiBundle\\Model\\Provider\\DataSource\\EnableDisable{% endArgument %}
                                    {% argument name="helpMessage" type="string" %}We recommend disabling website on creation.{% endArgument %}
                                {% endArgument %}
                            {% endArgument %}
                        {% endArgument %}
                    {% endArgument %}
                {% endArguments %}
            {% endBlock %}
        {% endBlock %}
    {% endReferenceContainer %}
{% endPage %}