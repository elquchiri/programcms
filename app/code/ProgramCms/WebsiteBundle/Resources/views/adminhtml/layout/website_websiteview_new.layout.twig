{% page layout="admin-2columns-left" %}
    {% referenceContainer name="sidebar.main" %}
        {% block name="category.tree.block" class="ProgramCms\\CatalogBundle\\Block\\CategoryTreeButtons" template="@ProgramCmsWebsiteBundle/new_root_website.html.twig" %}{% endBlock %}
        {% block name="category.tree" class="ProgramCms\\UiBundle\\Block\\Tree\\Tree" %}
            {% arguments %}
                {% argument name="isOpen" type="boolean" %}true{% endArgument %}
                {% argument name="dataProvider" type="array" %}
                    {% argument name="class" type="string" %}ProgramCms\WebsiteBundle\Model\Website\DataProvider{% endArgument %}
                {% endArgument %}
            {% endArguments %}
        {% endBlock %}
    {% endReferenceContainer %}
    {% referenceContainer name="content" %}
        {% block name="form" class="ui.block.form" %}
            {% arguments %}
                {% argument name="label" type="string" %}Website View Information{% endArgument %}
                {% argument name="dataProvider" type="array" %}
                    {% argument name="class" type="string" %}ProgramCms\WebsiteBundle\Model\WebsiteView\Form\DataProvider{% endArgument %}
                    {% argument name="primaryFieldName" type="string" %}website_view_id{% endArgument %}
                    {% argument name="requestFieldName" type="string" %}id{% endArgument %}
                {% endArgument %}
                {% argument name="buttons" type="array" %}
                    {% argument name="back" type="string" %}ProgramCms\WebsiteBundle\Model\Provider\Button\BackToWebsiteGroupButton{% endArgument %}
                    {% argument name="remove" type="array" %}
                        {% argument name="buttonType" type="string" %}secondary{% endArgument %}
                        {% argument name="buttonAction" type="string" %}website_website_new{% endArgument %}
                        {% argument name="label" type="string" %}Remove{% endArgument %}
                    {% endArgument %}
                    {% argument name="saveButton" type="array" %}
                        {% argument name="buttonType" type="string" %}save{% endArgument %}
                        {% argument name="buttonTarget" type="string" %}form{% endArgument %}
                        {% argument name="buttonAction" type="string" %}website_websiteview_save{% endArgument %}
                        {% argument name="label" type="string" %}Save View{% endArgument %}
                    {% endArgument %}
                {% endArgument %}
                {% argument name="fieldsets" type="array" %}
                    {% argument name="fieldset" type="array" %}
                        {% argument name="fields" type="array" %}
                            {% argument name="is_active" type="array" %}
                                {% argument name="type" type="string" %}switcher{% endArgument %}
                                {% argument name="label" type="string" %}Enable Website View{% endArgument %}
                            {% endArgument %}
                            {% argument name="website_view_name" type="array" %}
                                {% argument name="type" type="string" %}text{% endArgument %}
                                {% argument name="label" type="string" %}Name{% endArgument %}
                                {% argument name="placeholder" type="string" %}Name{% endArgument %}
                                {% argument name="isRequired" type="boolean" %}true{% endArgument %}
                            {% endArgument %}
                            {% argument name="website_view_code" type="array" %}
                                {% argument name="type" type="string" %}text{% endArgument %}
                                {% argument name="label" type="string" %}Code{% endArgument %}
                                {% argument name="placeholder" type="string" %}Code{% endArgument %}
                                {% argument name="isRequired" type="boolean" %}true{% endArgument %}
                            {% endArgument %}
                            {% argument name="sort_order" type="array" %}
                                {% argument name="type" type="string" %}text{% endArgument %}
                                {% argument name="label" type="string" %}Sort Order{% endArgument %}
                                {% argument name="placeholder" type="string" %}0{% endArgument %}
                                {% argument name="value" type="string" %}0{% endArgument %}
                            {% endArgument %}
                            {% argument name="website_group_id" type="array" %}
                                {% argument name="type" type="string" %}hidden{% endArgument %}
                            {% endArgument %}
                        {% endArgument %}
                    {% endArgument %}
                {% endArgument %}
            {% endArguments %}
        {% endBlock %}
    {% endReferenceContainer %}
{% endPage %}