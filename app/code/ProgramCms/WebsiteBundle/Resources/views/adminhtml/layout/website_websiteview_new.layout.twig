{% page layout="admin-2columns-left" %}
    {% referenceContainer name="sidebar.main" %}
        {% block name="category.tree" class="ProgramCms\\UiBundle\\Component\\Tree\\Tree" %}
            {% arguments %}
                {% argument name="data" type="array" %}
                    {% argument name="isOpen" type="boolean" %}true{% endArgument %}
                {% endArgument %}
                {% argument name="dataSource" type="array" %}
                    {% argument name="dataProvider" type="array" %}
                        {% argument name="class" type="string" %}ProgramCms\WebsiteBundle\Model\Website\DataProvider{% endArgument %}
                    {% endArgument %}
                {% endArgument %}
            {% endArguments %}
        {% endBlock %}
    {% endReferenceContainer %}
    {% referenceContainer name="content" %}
        {% block name="website_view_form" class="ui.block.form" %}
            {% arguments %}
                {% argument name="data" type="array" %}
                    {% argument name="label" type="string" %}Website View Information{% endArgument %}
                {% endArgument %}
                {% argument name="buttons" type="array" %}
                    {% argument name="back" type="string" %}ProgramCms\WebsiteBundle\Model\Provider\Button\BackToWebsiteGroupButton{% endArgument %}
                    {% argument name="save" type="string" %}ProgramCms\WebsiteBundle\Model\Provider\Button\SaveWebsiteViewButton{% endArgument %}
                {% endArgument %}
                {% argument name="dataSource" type="array" %}
                    {% argument name="settings" type="array" %}
                        {% argument name="submitUrl" type="string" %}website_websiteview_save{% endArgument %}
                    {% endArgument %}
                {% endArgument %}
            {% endArguments %}
            {% block name="website_view_fieldset" class="ui.block.form.fieldset" %}
                {% block name="website_view_id" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}hidden{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="is_active" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}switcher{% endArgument %}
                            {% argument name="label" type="string" %}Enable View{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="website_view_name" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}Name{% endArgument %}
                            {% argument name="placeholder" type="string" %}Name{% endArgument %}
                            {% argument name="isRequired" type="boolean" %}true{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="website_view_code" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}Code{% endArgument %}
                            {% argument name="placeholder" type="string" %}Code{% endArgument %}
                            {% argument name="isRequired" type="boolean" %}true{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="sort_order" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}text{% endArgument %}
                            {% argument name="label" type="string" %}Sort Order{% endArgument %}
                            {% argument name="placeholder" type="string" %}0{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
                {% block name="website_group_id" class="ui.block.form.field" %}
                    {% arguments %}
                        {% argument name="data" type="array" %}
                            {% argument name="type" type="string" %}select{% endArgument %}
                            {% argument name="label" type="string" %}Group{% endArgument %}
                            {% argument name="sourceModel" type="string" %}ProgramCms\WebsiteBundle\Model\Provider\DataSource\Groups{% endArgument %}
                            {% argument name="isRequired" type="boolean" %}true{% endArgument %}
                        {% endArgument %}
                    {% endArguments %}
                {% endBlock %}
            {% endBlock %}
        {% endBlock %}
    {% endReferenceContainer %}
{% endPage %}