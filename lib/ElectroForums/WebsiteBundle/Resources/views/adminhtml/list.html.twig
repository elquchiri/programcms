{% extends '@ElectroForumsTheme/adminhtml/layout.html.twig' %}

{% block title %}All Websites{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/electroforumsuser/css/app.css') }}">
{% endblock %}

{% block page_title %}All Web Sites{% endblock %}
{% block page_tip %}Browse / Manage Websites{% endblock %}

{% block content %}
    <div style="margin-bottom: 21px; border-top: 1px solid #CCC; border-bottom: 1px solid #CCC; width: 100%; background-color: #f8f8f8; padding: 21px; text-align: right">
        <a href="{{ path('electro_forums_website_create') }}" class="btn btn-primary">Create Website</a>
    </div>

    <div class="mb-3">
        <nav class="navbar navbar-expand-lg">
            <div class="navbar-collapse" id="navbarSupportedContent">
                <form class="d-flex" role="search" style="margin-right: 11px;">
                    <div class="input-group">
                        <input type="text" style="width: 300px" class="form-control" placeholder="Search by Keyword .." aria-label="Recipient's username" aria-describedby="button-addon2">
                        <button class="btn" type="button" id="button-addon2"
                                style="border: 1px solid #CCC; border-left: 0; padding-top: 0;">
                            <img src="{{ asset('bundles/electroforumsforum/images/search.png') }}" style="width: 15px; height: 15px"/>
                        </button>
                    </div>
                </form>
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Filters
                        </a>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item" href="#">Profile</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Columns
                        </a>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item" href="#">Profile</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Export
                        </a>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item" href="#">PDF</a>
                            <a class="dropdown-item" href="#">CSV</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
        <nav class="navbar navbar-expand-lg">
            <div class="navbar-collapse" id="navbarSupportedContent">
                <form class="d-flex me-5" role="search">
                    <div class="form-floating">
                        <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                            <option selected>Select an Action</option>
                            <option value="1">Delete</option>
                            <option value="2">Activate</option>
                            <option value="3">Desactivate</option>
                        </select>
                        <label for="floatingSelect">Bulk Actions</label>
                    </div>
                </form>
                <span class="mb-0">3 records found</span>
                <ul class="pagination justify-content-end ms-auto mt-2">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>

