{% extends '@ElectroForumsTheme/frontend/layout.html.twig' %}

{% block title %}Welcome to ElectroForums !{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/electroforumscms/css/frontend/home.cms.css') }}">
{% endblock %}

{% block page_title %}Home{% endblock %}
{% block page_tip %}Welcome to ElectroForums.{% endblock %}

{% block content %}
    <div class="container-fluid" style="padding: 21px;">
        <div class="row home-cms">
            <div class="col-md-10">
                {% include '@ElectroForumsForum/frontend/forums.view.html.twig' %}
            </div>
            <div class="col-md-2 home-cms-right-panel">
                {% include '@ElectroForumsUser/frontend/authentication.html.twig' %}

                <div class="card">
                    <div class="card-header">
                        Time Now
                    </div>
                    <div class="card-body">
                        <div class="form-floating">
                            <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                                <option selected>Open this select menu</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                            <label for="floatingSelect">Works with selects</label>
                        </div>
                    </div>
                </div>

                {% include '@ElectroForumsUser/frontend/online.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}