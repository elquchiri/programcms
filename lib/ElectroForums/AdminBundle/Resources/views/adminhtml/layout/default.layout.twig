{% EFPage layout="admin-1column" %}
    {% EFCss ['bootstrap.min.css', 'bundles/electroforumsadmin/css/sidebar.css', 'bundles/electroforumsadmin/css/main-admin.css', 'bundles/electroforumsadmin/css/footer-admin.css', 'bundles/electroforumsui/css/components/buttons-bar.css', 'bundles/electroforumsui/css/components/grid.css'] %}
    {% EFJs ['jquery.min.js', 'underscore-umd-min.js', 'popper.min.js', 'bootstrap.bundle.min.js', 'bundles/electroforumsadmin/js/sidebar.js', 'bundles/electroforumsui/js/toolbar.js'] %}

    {% EFReferenceContainer name="page.menu" %}
        {% EFBlock name="register.content" class="ElectroForums\\UserBundle\\Block\\Account\\Navigation" template="@ElectroForumsAdminBundle/sidebar.html.twig" %}{% endEFBlock %}
    {% endEFReferenceContainer %}
    {% EFReferenceContainer name="main.top" %}
        {% EFContainer name="navbar.header" htmlTag="nav" htmlClass="navbar navbar-expand-lg container-fluid content-header" %}
            {# Page Title EFBlock #}
            {% EFBlock name="page.title" class="ElectroForums\\ThemeBundle\\Block\\Html\\Title" template="@ElectroForumsThemeBundle/title.html.twig" %}{% endEFBlock %}
            {# Admin Navbar Fast Access Container #}
            {% EFContainer name="navbar.collapse" htmlTag="div" htmlClass="collapse navbar-collapse justify-content-end" %}
                {% EFBlock name="account.dropdown" class="ElectroForums\\UserBundle\\Block\\Account\\Navigation" template="@ElectroForumsAdminBundle/admin_account_dropdown.html.twig" %}{% endEFBlock %}
            {% endEFContainer %}
        {% endEFContainer %}
    {% endEFReferenceContainer %}
    {% EFReferenceContainer name="page.main.actions" %}
        {% EFContainer name="buttons.bar" htmlTag="div" htmlClass="container-fluid ef-buttons-bar" %}{% endEFContainer %}
    {% endEFReferenceContainer %}
    {% EFReferenceContainer name="page.messages" %}
        {% EFBlock name="page.alerts.block" class="ElectroForums\\UserBundle\\Block\\Account\\Navigation" template="@ElectroForumsAdminBundle/flashes.html.twig" %}{% endEFBlock %}
    {% endEFReferenceContainer %}
    {% EFReferenceContainer name="footer.container" %}
        {% EFContainer name="footer.content" htmlTag="div" htmlClass="footer-content" %}
            {% EFBlock name="footer.content.block" class="ElectroForums\\UserBundle\\Block\\Account\\Navigation" template="@ElectroForumsAdminBundle/footer.html.twig" %}{% endEFBlock %}
        {% endEFContainer %}
    {% endEFReferenceContainer %}
{% endEFPage %}