{% EFPage layout="3columns" %}
    {% EFCss ['bootstrap.min.css', 'bundles/electroforumstheme/css/main.css', 'bundles/electroforumstheme/css/top-panel.css', 'bundles/electroforumstheme/css/footer.css', 'bundles/electroforumstheme/css/breadcrumb.css'] %}
    {% EFJs ['jquery.min.js', 'underscore-umd-min.js', 'popper.min.js', 'bootstrap.bundle.min.js'] %}

    {% EFReferenceContainer name="header.container" %}
        {% EFContainer name="header.panel.wrapper" htmlTag="div" htmlClass="panel wrapper" %}
            {% EFContainer name="header.panel" htmlTag="div" htmlClass="panel header container" %}
                {# Website switcher dropdown #}
                {% EFBlock name="website.switcher" class="ElectroForums\\WebsiteBundle\\Block\\WebsiteSwitcher" template="@ElectroForumsWebsiteBundle/website_switcher.html.twig" %}{% endEFBlock %}
                {# Account navigation links #}
                {% EFBlock name="website.navigation" class="ElectroForums\\UserBundle\\Block\\Account\\Navigation" template="@ElectroForumsUserBundle/account_navigation.html.twig" %}{% endEFBlock %}
            {% endEFContainer %}
        {% endEFContainer %}
        {% EFContainer name="header.wrapper" htmlTag="div" htmlClass="panel content" %}
            {% EFContainer name="navbar" htmlTag="nav" htmlClass="navbar navbar-expand-lg container" %}
                {# Website LOGO EFBlock #}
                {% EFBlock name="logo" class="ElectroForums\\ThemeBundle\\Block\\Html\\Header\\Logo" template="@ElectroForumsThemeBundle/logo.html.twig" %}{% endEFBlock %}
                {# Website Navbar Toggler EFBlock #}
                {% EFBlock name="navbar.togller" class="ElectroForums\\UserBundle\\Block\\Account\\Navigation" template="@ElectroForumsThemeBundle/navbar_toggler.html.twig" %}{% endEFBlock %}
                {# Website Navbar Fast Access Container #}
                {% EFContainer name="navbar.collapse" htmlTag="div" htmlClass="collapse navbar-collapse justify-content-end" %}{% endEFContainer %}
            {% endEFContainer %}
        {% endEFContainer %}
    {% endEFReferenceContainer %}

    {% EFReferenceContainer name="page.top" %}
        {# Navigation Section EFBlock #}
        {% EFBlock name="navigation.bar" class="ElectroForums\\UserBundle\\Block\\Account\\Navigation" template="@ElectroForumsThemeBundle/navigation.bar.html.twig" %}{% endEFBlock %}
        {% EFContainer name="top.container" htmlTag="div" htmlClass="top-container" %}{% endEFContainer %}
        {# Breadcrump EFBlock #}
        {% EFBlock name="breadcrumb" class="ElectroForums\\UserBundle\\Block\\Account\\Navigation" template="@ElectroForumsThemeBundle/breadcrumb.html.twig" %}{% endEFBlock %}
    {% endEFReferenceContainer %}

    {% EFReferenceContainer name="main" %}
        {% EFContainer name="content" %}{% endEFContainer %}
    {% endEFReferenceContainer %}

    {% EFReferenceContainer name="footer.container" %}
        {% EFContainer name="footer" htmlTag="div" htmlClass="footer content" %}
            {% EFBlock name="footer.content" class="ElectroForums\\WebsiteBundle\\Block\\WebsiteSwitcher" template="@ElectroForumsThemeBundle/footer.html.twig" %}{% endEFBlock %}
        {% endEFContainer %}
    {% endEFReferenceContainer %}
{% endEFPage %}